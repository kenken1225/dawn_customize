
<section class="sec04 sec">
    <div class="items-wrapper flex">
        {% for block in section.blocks %}
            {% assign collection = block.settings.toppage_collection %}
            <a href="{{ collection.url }}" class="item" style="background-image: url( {{ collection.image | image_url }} );" >
                <div class="item__content">
                    <h3 class="item__content-text" > {{ block.settings.toppage_text }} </h3>
                    <div class="Btn-top bgleft bgleft03 collection-btn "  style=" border:2px solid #fff; ">
                        <span style=" font-weight: bold; color: white; " >もっと見る</span>
                    </div>
                </div>
            </a>
        {% endfor %}
